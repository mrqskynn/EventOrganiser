@model IEnumerable<EventOrganizer.Models.EventDetails>

@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Events</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.EventName)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.EventDate)</th>
                <th>@Html.DisplayNameFor(model => model.EventTime)</th>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                    <td>@item.EventDate.ToShortDateString()</td>
                    <td>@item.EventTime.ToString(@"hh\:mm")</td>
                    <td>@item.Location</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

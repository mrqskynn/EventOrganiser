@model EventOrganizer.Models.EventDetails

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Event Details</h1>
        <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-warning">Edit</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">@Model.EventName</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.EventName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.EventName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Description)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.EventDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.EventDate)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.EventTime)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.EventTime)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Location)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Location)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Capacity)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Capacity)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>


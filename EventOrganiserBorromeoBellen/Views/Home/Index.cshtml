@model IEnumerable<EventOrganizer.Models.EventDetails>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="jumbotron text-center bg-primary text-white py-5 mb-5 rounded">
    <h1 class="display-4 fw-bold">Welcome to Event Organizer</h1>
    <p class="lead">Manage your events and participants effortlessly</p>
    <a asp-controller="EventDetails" asp-action="Create" class="btn btn-light btn-lg shadow-sm mt-3">
        <i class="bi bi-plus-circle"></i> Create Event
    </a>
</div>

<!-- Upcoming Events -->
<div class="container">
    <h2 class="mb-4 border-bottom pb-2">Upcoming Events</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var ev in Model.Take(4))
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@ev.EventName">@ev.EventName</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @ev.Description?.Length > 50 ? ev.Description.Substring(0, 50) + "..." : ev.Description
                            </p>
                            <ul class="list-unstyled mb-3">
                                <li><strong>Date:</strong> @ev.EventDate.ToString("MMMM dd, yyyy")</li>
                                <li><strong>Location:</strong> @ev.Location</li>
                            </ul>
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.EventId" class="btn btn-primary btn-sm mt-auto">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center text-muted fst-italic">No upcoming events found.</p>
            </div>
        }
    </div>
</div>

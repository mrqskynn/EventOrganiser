@model EventOrganizer.Models.Participant

@{
    ViewData["Title"] = "Create Participant";
}

<h2 class="mb-4">Create Participant</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactNumber" class="form-label fw-semibold"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventId" class="form-label fw-semibold">Event</label>
                <select asp-for="EventId" class="form-select" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="EventId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="JoinedDate" class="form-label fw-semibold"></label>
                <input asp-for="JoinedDate" type="date" class="form-control" />
                <span asp-validation-for="JoinedDate" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
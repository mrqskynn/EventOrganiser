@model EventOrganizer.Models.Participant

@{
    ViewData["Title"] = "Delete Participant";
}

<div class="container mt-4">
    <h2 class="mb-3">Delete Participant</h2>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>

        <div class="card-body">
            <p class="text-muted">Are you sure you want to delete this participant?</p>

            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.FullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.FullName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.ContactNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.ContactNumber)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Event)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Event.EventName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.JoinedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.JoinedDate)</dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <form asp-action="Delete" class="m-0">
                <input type="hidden" asp-for="ParticipantId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
